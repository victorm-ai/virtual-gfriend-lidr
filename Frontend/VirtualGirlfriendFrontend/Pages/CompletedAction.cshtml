@page
@model VirtualGirlfriendFrontend.Pages.CompletedActionModel
@{
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Completed Action</title>
    <style>
        .container {
            display: flex;
        }

        .sidebar {
            width: 200px;
            background-color: #f8f8f8;
            padding: 10px;
            border-right: 1px solid #ccc;
        }

        .content {
            flex: 1;
            padding: 20px;
        }

        .menu-item {
            display: block;
            margin-bottom: 10px;
            text-decoration: none;
            color: #333;
        }

            .menu-item:hover {
                font-weight: bold;
            }
    </style>
</head>

<body>
    <div class="container">
        <nav class="sidebar">
            <ul style="list-style:none; padding:0;">
                <li><a class="menu-item" href="AccountPage">Your account</a></li>
                <li><a class="menu-item" href="AvatarsPage">Your avatars</a></li>
                <li><a class="menu-item" href="AchievementsPage">Your achievements</a></li>
                <li><a class="menu-item" href="ActivitiesPage">Your activities</a></li>
            </ul>
        </nav>
        <main class="content">

            @if (ViewData["MessageResult"] != null)
            {
                <div class="alert alert-success">
                    <h4>@ViewData["MessageResult"]</h4>
                </div>
            }
            
        </main>
    </div>
</body>
